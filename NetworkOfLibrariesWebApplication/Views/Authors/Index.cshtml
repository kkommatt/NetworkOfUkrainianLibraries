@model IEnumerable<NetworkOfLibrariesWebApplication.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Автори</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datebirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datebirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
        </tr>
}
    </tbody>
</table>
